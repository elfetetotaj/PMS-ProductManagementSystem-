@model PMS.Data.City

@{
    ViewData["Title"] = "Create";
}
<br />

<h2 class="text-info">Create City</h2>
<form asp-action="Create">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CityName" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CityName" class="form-control" />
            </div>
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ZipCode" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ZipCode" class="form-control" />
            </div>
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Country" class="control-label"></label>
            </div>
            <div class="col-5">
               <select asp-for="CountryId" asp-items="ViewBag.CountryId" class="form-control"></select>
            </div>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
