@model PMS.Models.Country

@{
    ViewData["Title"] = "Details";
}
<br />

<h2 class="text-info">Countries Details</h2>
<form asp-action="Details">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CountryId" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CountryId" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CountryName" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CountryName" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="CountryName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CountryCode" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CountryCode" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="CountryCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.CountryId" class="btn  btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
