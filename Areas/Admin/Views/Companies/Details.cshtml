@model PMS.Models.Company

@{
    ViewData["Title"] = "Details";
}<br />

<h2 class="text-info">Cities Details</h2>
<form asp-action="Details">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CompanyId" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CompanyId" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="CompanyId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CompanyName" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CompanyName" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Address" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NrTelefonit" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="NrTelefonit" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="NrTelefonit" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NrFiskal" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="NrFiskal" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="NrFiskal" class="text-danger"></span>
        </div>
        <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Active"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Active" readonly="readonly" class="" type="checkbox" onclick="return false;" />
                </div>
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Country" class="control-label"></label>
            </div>
            <div class="col-5">
               @*<select asp-for="CountryId" asp-items="ViewBag.CountryId" class="form-control"></select>*@
               <input asp-for="CountryId" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.CountryId" class="btn  btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
